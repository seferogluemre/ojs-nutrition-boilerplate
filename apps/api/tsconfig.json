{
  "extends": "../../packages/tooling-config/tsconfig/elysia.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "tsBuildInfoFile": "../../dist/apps/api/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#prisma/*": ["./prisma/client/*"],
      "#prismabox/*": ["./prisma/prismabox/*"],
      "#*": ["./src/*"],
      "@core": ["./src/core/*"],
      "@prisma": ["./prisma/client/*"],
      "@shared": ["./src/shared/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
    },
    "outDir": "../../dist/apps/api"
  },
  "include": ["src/**/*.{ts,tsx}", "prisma/**/*.ts"],
  "references": []
}