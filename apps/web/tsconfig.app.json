{
  "extends": "../../packages/tooling-config/tsconfig/react-app.json",    
  "compilerOptions": {
    "tsBuildInfoFile": "../../dist/apps/web/.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#components/*": ["./src/components/*"],
      "#features/*": ["./src/features/*"],
      "#hooks/*": ["./src/hooks/*"],
      "#lib/*": ["./src/lib/*"],
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"],
      "#config/*": ["./src/config/*"],
    },
    "outDir": "../../dist/apps/web",
    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "files": [],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "references": [
    {
      "path": "./tsconfig.node.json",
      "composite": true 
    },
    {
      "path": "../api/tsconfig.json"
    }
  ]
}
