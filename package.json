    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "bun-types": "latest",
    "eslint": "^9.16.0",
